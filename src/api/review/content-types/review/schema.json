{
  "kind": "collectionType",
  "collectionName": "reviews",
  "info": {
    "singularName": "review",
    "pluralName": "reviews",
    "displayName": "Review"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "rating": {
      "type": "decimal",
      "required": true,
      "unique": true,
      "min": 0,
      "max": 5
    },
    "author": {
      "type": "string",
      "required": true
    },
    "review_text": {
      "type": "text",
      "required": false
    },
    "publishTime": {
      "type": "datetime",
      "required": true
    },
    "publishTimeRelative": {
      "type": "string"
    }
  }
}
